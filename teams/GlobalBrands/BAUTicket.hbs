<h2>A - Requirements</h2>
<div class="data-table" data-field="requirement">
    {{#requirement}}
        <table style="border: solid 1px #000; width: 100%;border-collapse:collapse;margin-bottom: 5px;" class="data-table-row">
            {{#columns}}
                <tr>
                    <th style="text-align: left; background-color: #ddd; width: 100px; font-size: 0.9em;border: solid 1px #000;">{{label}}</th>
                    <td style="border: solid 1px #000;" class="data-table-column-cell" data-field-label="{{label}}">{{{value}}}</td>
                </tr>
            {{/columns}}
        </table>
    {{/requirement}}
</div>

{{#if asIs}}
	<h3>As Is</h3>
	<p class="data-value" data-field-value="asIs">{{{asIs}}}</p>
{{/if}}

{{#if toBe}}
	<h3>To Be</h3>
	<p class="data-value" data-field-value="toBe">{{{toBe}}}</p>
{{/if}}

<h2>B - Acceptance Criteria</h2>
