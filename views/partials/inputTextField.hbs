<input type="text"
    class="{{fieldCssClass}}"
    {{#if fieldId}}id="{{fieldId}}"{{/if}}
    {{#if appendTo}}data-append-to="{{appendTo}}"{{/if}}
    {{#if fillpoint}}data-fillpoint="{{fillpoint}}"{{/if}}
    {{#if placeholder}}placeholder="{{placeholder}}"{{/if}}
    {{#if value}}value="{{value}}"{{/if}}
    />